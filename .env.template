# .env.template
# ハイブリッド型自律コード修正システム - 環境変数テンプレート
# このファイルをコピーして .env を作成してください

# ========================================
# 基本設定
# ========================================
RUN_MODE=local                    # local, cloud, hybrid
DEFAULT_STRATEGY=ADAPTIVE         # LOCAL_ONLY, CLOUD_ONLY, LOCAL_FIRST, CLOUD_FIRST, PARALLEL, ADAPTIVE

# ========================================
# ローカルエージェント設定
# ========================================
USE_LOCAL_AI=true
LOCAL_TIMEOUT=30

# ========================================
# クラウドエージェント設定
# ========================================
CLOUD_PROVIDER=openai             # openai, anthropic, google
CLOUD_MODEL=gpt-4o               # gpt-4o, claude-opus-4, gemini-2.0-flash-exp
CLOUD_TIMEOUT=120

# APIキー（使用するプロバイダーのキーを設定）
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# ========================================
# テスト設定
# ========================================
ENABLE_AUTO_TESTS=true
WP_PATH=/var/www/html
TEST_TIMEOUT=60

# ========================================
# GitHub設定
# ========================================
ENABLE_AUTO_PR=false
GITHUB_TOKEN=ghp_your-github-token-here
REPO_OWNER=your-github-username
REPO_NAME=your-repo-name
GITHUB_AUTO_MERGE=false

# ========================================
# ストレージ設定
# ========================================
STORAGE_PROVIDER=local            # local, gcs, s3, azure
STORAGE_BUCKET=                   # バケット名（クラウドストレージ使用時）
AUTO_SYNC_STORAGE=true

# Google Cloud Storage
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string

# ========================================
# バックアップ設定
# ========================================
BACKUP_DIR=./backups
MAX_BACKUPS=10
BACKUP_RETENTION_DAYS=30

# ========================================
# リトライ設定
# ========================================
MAX_RETRY_COUNT=3
RETRY_DELAY=5

# ========================================
# ログ設定
# ========================================
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/hybrid_fix.log
LOG_ROTATION=10 MB

# ========================================
# パフォーマンス設定
# ========================================
MAX_PARALLEL_FIXES=3
ENABLE_CACHE=true
CACHE_TTL=3600

# ========================================
# 通知設定（オプション）
# ========================================
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_RECIPIENTS=admin@example.com,dev@example.com

# ========================================
# ヘルスチェック設定
# ========================================
HEALTH_CHECK_INTERVAL=60
ENABLE_METRICS=true

# ========================================
# デバッグ設定
# ========================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
DRY_RUN=false                     # true にすると実際の修正を適用しない

# ========================================
# WordPress設定（Docker使用時）
# ========================================
WORDPRESS_DB_HOST=mysql:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_password

# ========================================
# セキュリティ設定
# ========================================
# セキュアな値を設定してください
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# ========================================
# カスタム設定
# ========================================
# プロジェクト固有の設定をここに追加